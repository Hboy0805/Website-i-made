        #sidebar {
            width: 250px;
            background: #2c3e50;
            color: white;
            padding: 20px;
            position: fixed;
            left: -250px;
            height: 100%;
            transition: left 0.3s ease;
            z-index: 1000; /* Ensure the sidebar is above the content */
        }
        #sidebar.open {
            left: 0;
        }
        #content {
            flex: 1;
            padding: 20px;
            margin-left: 0;
            transition: margin-left 0.3s ease;
            position: relative;
            z-index: 1; /* Ensure content is below the sidebar */
        }
        #toggle-btn {
            position: fixed;
            top: 20px;
            left: 20px;
            padding: 10px 15px;
            background: #3498db;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            z-index: 999;
        }
        section {
